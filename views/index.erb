<h2>Volunteer Tracker</h2>

<form action="/" method="post">
  <div class="form-group">
    <label for="title">Please input the project.</label>
    <input id="title" name="title" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-info">Create Project</button>
</form>

<% if @projects.any?() %>
  <h3>Here is your list of projects.</h3>
  <h3>Click on the project below for more details:</h3>
  <ul>
    <% @projects.each() do |project| %>
      <li><a href="projects/<%= project.id()%>"><%= project.title() %></a></li>
    <% end %>
  </ul>
    <% else %>
      <h3>There are no projects!</h3>
<% end %>

<hr>
<p><a href="/volunteers">View a list of volunteers</a></p>
